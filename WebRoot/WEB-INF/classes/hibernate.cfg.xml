<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/secret_chat?characterEncoding=UTF-8
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">admin</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			secret_chat
		</property>
		<!-- 打开并配置二级缓存 -->
		<property name="cache.use_second_level_cache">true</property>

		<property name="cache.provider_class">
			org.hibernate.cache.EhCacheProvider
		</property>
		<property name="cache.use_query_cache">true</property>
		<!--显示sql语句 -->
		<property name="show_sql">false</property>

		<!--格式化sql语句 -->
		<property name="format_sql">false</property>

		<!-- 配置利用映射文件生成表 * none:如果表存在,插入数据到到表中. 如果表不存在,抛出异常 * create: * 如果表不存在,创建新的表，插入数据到表中 
			* 如果表存在,先删除表,创建新的表，插入数据到表中 * update: * 如果表不存在,创建新的表,插入数据到表中 * 如果表存在 * 如果表的结构没有变化,插入数据到表中 
			* 如果表的结构有变化,更新表的结构，插入数据到表中 -->
		<property name="hbm2ddl.auto">update</property>
		<mapping resource="com/secret/bean/User.hbm.xml" />
		<mapping resource="com/secret/bean/Message.hbm.xml" />
		<mapping resource="com/secret/bean/Comment.hbm.xml" />

	</session-factory>

</hibernate-configuration>